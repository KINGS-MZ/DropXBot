{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["app.js", "index.js", "package.json"]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node app.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 